{
    "manifest_version": 3,
    "name": "SusPick - Suspicious Site Analyzer",
    "description": "Analyzes the current website for suspicious patterns.",
    "version": "1.0",
    "permissions": ["tabs", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  
